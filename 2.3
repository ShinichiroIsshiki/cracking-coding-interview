import java.util.HashSet;

import CtCILibrary.AssortedMethods;
import CtCILibrary.LinkedListNode;

public class Main {

	public static boolean deleteNode(LinkedListNode n) {
		// ベースケース: nがnullまたはnが末尾のノードである場合は削除できない
		if (n == null || n.next == null) {
			return false;
		}
	
		// 次のノードを取得
		LinkedListNode next = n.next;
		// 現在のノードのデータを次のノードのデータで置き換える
		n.data = next.data;
		// 現在のノードの次のリンクを次のノードの次のリンクで置き換える
		n.next = next.next;
		return true;
	}
	
	public static void main(String[] args) {
		// 配列を作成
		int[] array = {0, 1, 2, 3, 4, 5, 6};
		// 配列から連結リストを作成
		LinkedListNode head = AssortedMethods.createLinkedListFromArray(array);
		// 連結リストの内容を出力
		System.out.println(head.printForward());  // 出力: 0 -> 1 -> 2 -> 3 -> 4 -> 5 -> 6
		// 先頭から4つ先のノードを削除（値が4のノード）
		deleteNode(head.next.next.next.next);
		// 連結リストの内容を再度出力
		System.out.println(head.printForward());  // 出力: 0 -> 1 -> 2 -> 3 -> 5 -> 6
	}
}
